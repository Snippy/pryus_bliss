<div class="salles ui-corner-all ui-widget-content">
	<h3 class="ui-state-default "><%= s.nom_salle %><span> - <%= s.ip_reseau %><%s.masque_reseau %></span></h3>
		<% if signed_in? %>
			<ul class="ul_machines signed_in_ul_machines">
		<% else %>
			<ul class="ul_machines">
		<% end %>
	
			<% s.machines.each do |m| %>	
			
			<% if signed_in? %>
				<li class="li_machines signed_in_li_machines" >
			<% else %>
				<li class="li_machines" >
			<% end %>	
				<table class="table_machines">
										
					<% m.etat_machine %><% m.etat_service_machine %>
					<tr>
						<td>
							<div class="infobull">
								<%= image_tag("machine.png", :alt=> m.nom_machine ) %>
								<p>Ip: <%= m.ip_machine %><br />Desc: <%= m.description_machine %></p>
							</div>

						</td>
					</tr>
					<tr>
						<td><%= m.nom_machine %></td>
					</tr>

				</table>
			</li>
		
			<% end %>
			
		<hr class="separateur" />
	</ul>

</div>